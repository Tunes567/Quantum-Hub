{
  "framework": "nextjs",
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python"
    }
  },
  "builds": [
    { "src": "api/requirements.txt", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.py" },
    { "src": "/api/(.*)", "dest": "/api/app.py" }
  ]
} 